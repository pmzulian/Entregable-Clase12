{{> head}}

<h2>Ingresar productos desde Handlebars</h2>

<form class="jumbotron" action="../api/productos/guardar" method="POST">
    <div class="form-group">
        <label for="title">Nombre del producto</label>
        <input type="text" class="form-control" name="title" placeholder="Nombre">
    </div>
    <div class="form-group">
        <label for="precio">Nombre del producto</label>
        <input type="number" class="form-control" name="price" placeholder="Precio">
    </div>
    <div class="form-group">
        <label for="thumbnail">URL de la imagen</label>
        <input type="url" class="form-control" name="thumbnail" placeholder="URL">
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>